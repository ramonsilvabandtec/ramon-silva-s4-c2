<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:backgroundTint="#BABABA"
    android:background="#F39C12">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register dog"
        android:id="@+id/bt_register"
        android:onClick="goRegister"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List dogs"
        android:id="@+id/bt_list"
        android:layout_below="@id/bt_register"
        android:onClick="List"
        android:layout_centerHorizontal="true"
        ></Button>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_remover"
        android:hint="int remover"
        android:layout_below="@id/bt_list"
        android:layout_centerHorizontal="true"
        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVER"
        android:id="@+id/bt_remover"
        android:layout_below="@id/id_remover"
        android:onClick="remover"
        android:layout_centerHorizontal="true"
        ></Button>

</RelativeLayout>